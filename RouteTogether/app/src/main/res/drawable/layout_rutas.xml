<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/otros" />

    <TextView
        android:id="@+id/Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de la ruta"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/direccionRecogida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Direccion de recogida"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/Nombre" />

    <TextView
        android:id="@+id/direccionFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Direccion de fin del destino"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/direccionRecogida"
        app:layout_constraintTop_toBottomOf="@+id/direccionRecogida" />

    <TextView
        android:id="@+id/HoraRecogida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Hora"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/direccionRecogida"
        app:layout_constraintTop_toTopOf="@+id/direccionRecogida" />

    <TextView
        android:id="@+id/Lunes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="L"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/Nombre"
        app:layout_constraintStart_toEndOf="@+id/Nombre"
        app:layout_constraintTop_toTopOf="@+id/Nombre" />

    <TextView
        android:id="@+id/Martes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/Lunes"
        app:layout_constraintTop_toTopOf="@+id/Lunes" />

    <TextView
        android:id="@+id/Miercoles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/Martes"
        app:layout_constraintTop_toTopOf="@+id/Martes" />

    <TextView
        android:id="@+id/Jueves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="J"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/Miercoles"
        app:layout_constraintTop_toTopOf="@+id/Miercoles" />

    <TextView
        android:id="@+id/Viernes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="V"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/Jueves"
        app:layout_constraintTop_toTopOf="@+id/Jueves" />

    <TextView
        android:id="@+id/Sabado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/Viernes"
        app:layout_constraintTop_toTopOf="@+id/Viernes" />

    <TextView
        android:id="@+id/Domingo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/Sabado"
        app:layout_constraintTop_toTopOf="@+id/Sabado" />

</androidx.constraintlayout.widget.ConstraintLayout>